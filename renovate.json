{
    "extends": ["config:base"],
    "packageRules": [
      {
        "matchDatasources": ["docker"],
        "matchManagers": ["dockerfile"],
        "updateTypes": ["minor", "patch"],
        "automerge": true
      }
    ],
    
    "managerFilePatterns": [
        "/(^|/|\\.)([Dd]ocker|[Cc]ontainer)file$/",
        "/(^|/)([Dd]ocker|[Cc]ontainer)file[^/]*$/"
    ]
      
  }
  